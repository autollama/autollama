# AutoLlama Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# AI SERVICES (REQUIRED)
# =============================================================================

# OpenAI API Key - Required for AI processing and embeddings
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Alternative AI providers (optional)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================

# PostgreSQL Database URL - Required for structured data storage
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/autollama

# Vector Database Configuration - Required for semantic search
# Qdrant Cloud URL - Get from: https://qdrant.io
QDRANT_URL=https://your-cluster-id.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here

# =============================================================================
# CONTEXTUAL EMBEDDINGS (ENHANCED RAG)
# =============================================================================

# Enable contextual embeddings for improved retrieval accuracy (35% improvement)
ENABLE_CONTEXTUAL_EMBEDDINGS=true

# AI model for context generation - Options: gpt-4o-mini, gpt-4o, gpt-3.5-turbo
CONTEXTUAL_EMBEDDING_MODEL=gpt-4o-mini

# Batch size for context generation (performance tuning)
CONTEXT_GENERATION_BATCH_SIZE=5

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Service name and domain settings
SERVICE_NAME=autollama
DOMAIN=autollama.io

# Security settings
NODE_TLS_REJECT_UNAUTHORIZED=0  # For accessing academic sites with self-signed certs

# =============================================================================
# LOGGING AND DEBUG (OPTIONAL)
# =============================================================================

# Debug mode for development
DEBUG_MODE=false

# Logging configuration
LOG_LEVEL=info              # Options: debug, info, warn, error
LOG_TO_FILE=false           # Enable file logging
MAX_LOG_SIZE=1048576        # 1MB log rotation

# =============================================================================
# PERFORMANCE TUNING (OPTIONAL)
# =============================================================================

# Request timeouts and retry settings
REQUEST_TIMEOUT=30000       # 30 seconds
RETRY_ATTEMPTS=3
RETRY_DELAY=1000           # 1 second base delay (exponential backoff)

# Session management
SESSION_CLEANUP_INTERVAL=300    # 5 minutes
SESSION_CLEANUP_THRESHOLD=15    # 15 minutes timeout

# =============================================================================
# EXTERNAL INTEGRATIONS (OPTIONAL)
# =============================================================================

# Webhook URLs for external workflow integrations
# WEBHOOK_TEST_URL=https://your-n8n.domain/webhook-test/your-webhook-id
# WEBHOOK_PROD_URL=https://your-n8n.domain/webhook/your-webhook-id
# USE_TEST_WEBHOOK=true

# =============================================================================
# LEGACY SUPPORT (OPTIONAL)
# =============================================================================

# Airtable integration for legacy data migration
# AIRTABLE_API_KEY=your_airtable_api_key_here